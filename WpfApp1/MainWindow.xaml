<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox  Name="TeamsView" HorizontalAlignment="Left" Height="289" Margin="26,99,0,0" VerticalAlignment="Top" Width="115" IsSynchronizedWithCurrentItem="False" SelectionChanged="TeamsView_SelectionChanged">

        </ListBox>
        <Label Content="Team" HorizontalAlignment="Left" Margin="26,68,0,0" VerticalAlignment="Top"/>
        <Label Content="Player" HorizontalAlignment="Left" Margin="170,73,0,0" VerticalAlignment="Top"/>
        <ListBox  x:Name="Players" HorizontalAlignment="Left" Height="289" Margin="170,99,0,0" VerticalAlignment="Top" Width="115" IsSynchronizedWithCurrentItem="False" SelectionChanged="TeamsView_SelectionChanged"/>
        <Label Content="Player WithoutTeam  " HorizontalAlignment="Left" Margin="328,73,0,0" VerticalAlignment="Top" Width="125"/>
        <ListBox  x:Name="PlayersWithoutTeam" HorizontalAlignment="Left" Height="289" Margin="328,99,0,0" VerticalAlignment="Top" Width="115" IsSynchronizedWithCurrentItem="False" SelectionChanged="TeamsView_SelectionChanged"/>
    </Grid>
</Window>
